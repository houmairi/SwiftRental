generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id         Int      @id @default(autoincrement())
  firstName  String
  lastName   String
  email      String   @unique
  phone      String?
  address    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  rentals    Rental[]
}

model Car {
  id              Int      @id @default(autoincrement())
  brand           String
  model           String
  year            Int
  licensePlate    String   @unique
  color           String?
  mileage         Int      @default(0)
  status          CarStatus @default(AVAILABLE)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  rentals         Rental[]
}

model Rental {
  id              Int          @id @default(autoincrement())
  customer        Customer     @relation(fields: [customerId], references: [id])
  customerId      Int
  car             Car          @relation(fields: [carId], references: [id])
  carId           Int
  startDate       DateTime     @default(now())
  endDate         DateTime?
  startMileage    Int
  endMileage      Int?
  status          RentalStatus @default(ACTIVE)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
}

enum CarStatus {
  AVAILABLE
  RENTED
  MAINTENANCE
  UNAVAILABLE
}

enum RentalStatus {
  ACTIVE
  COMPLETED
  CANCELLED
}